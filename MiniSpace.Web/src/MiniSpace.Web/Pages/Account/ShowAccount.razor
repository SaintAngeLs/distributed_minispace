    private RenderFragment LanguagesAndInterestsContent() => @<div>
        <MudText Typo="Typo.h6" GutterBottom="true">Languages & Interests</MudText>
        @if (isLoading)
        {
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
        }
