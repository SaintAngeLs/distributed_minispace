@code {
    [Parameter] public List<EventDto> Events { get; set; }
    [Parameter] public EventCallback<Guid> OnViewEvent { get; set; }
    [Parameter] public EventCallback<Guid> OnSignUpToEvent { get; set; }
    [Parameter] public EventCallback<Guid> OnShowInterestInEvent { get; set; }
}

<MudGrid Spacing="3">
    @if (Events?.Any() ?? false)
    {
        @foreach (var eventDto in Events)
        {
            <MudItem xs="12" sm="6" md="4">
                <EventItem Event="@eventDto" OnViewEvent="OnViewEvent" OnSignUpToEvent="OnSignUpToEvent" OnShowInterestInEvent="OnShowInterestInEvent" />
            </MudItem>
        }
    }
    else
    {
        <MudText Typo="Typo.h6" Color="Color.Secondary" Align="Align.Center" Class="mt-6">No events found.</MudText>
    }
</MudGrid>
